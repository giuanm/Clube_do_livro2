<div class="livro-form-container">
    <a href="/livros/dashboard">Back</a>
    <h1>Editing a comment:</h1>
    <form action="/livros/edit" method="post">
        <input type="hidden" name="id" value="{{livro.id}}">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" value="{{livro.title}}">
        </div>
        <div class="form-control">
            <label for="writer">Writer</label>
            <input type="text" name="writer" value="{{livro.writer}}">
        </div>
        <div class="form-control">
            <label for="comments">Comments</label>
            <textarea name="comments" id="comments" value="{{livro.comments}}" cols="30" rows="6">{{livro.comments}}</textarea>
        </div>
        <input type="submit" value="Edit">
    </form>
</div>